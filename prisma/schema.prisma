generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url  = env("DATABASE_URL")
}

model Jatek {
  id Int @id @default(autoincrement())
  megnevezes String
  anyag String
  suly Int
  gyerek Kot[]
}

model Gyerek{
  id Int @id @default(autoincrement())
  nev String
  cim String
  milyen Boolean
  jatek Kot[] 
}
model Kot{
  gyerekek Gyerek @relation(fields: [gyerekId], references: [id],onDelete: Cascade)
  gyerekId  Int
  jatekok Jatek  @relation(fields: [jatekId], references: [id],onDelete: Cascade)
  jatekId Int

  @@id([gyerekId, jatekId])
}
